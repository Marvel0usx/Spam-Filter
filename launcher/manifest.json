{
    "author": "Marvel0usx",
    "manifest_version": 2,
    "name": "Spamminess Gauge",
    "version": "1.0",
    "description": "This extension detects spam emails in yout Gmail inbox.",

    "icons": {
        "128": "icon.png"
    },

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Spamminess Gauge"
    },

    "permissions": [
        "tabs", "activeTab", "storage"
    ],

    "web_accessible_resources": ["js/*"]
}